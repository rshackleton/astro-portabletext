---
import type { ListComponentProps } from '../rendererTypes';

interface Props {
  portableText: ListComponentProps;
}

const { value } = Astro.props.portableText;
const { listItem } = value;
---

{
  listItem === 'number' ? (
    <ol>
      <slot />
    </ol>
  ) : (
    <ul>
      <slot />
    </ul>
  )
}
